<UserControl x:Class="GMCWPF.DockPanelContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMCWPF"
             mc:Ignorable="d">

    <DockPanel LastChildFill="True" Margin="25,0,0,5">
        <TextBlock TextWrapping="Wrap" Text="[内容]：" Foreground="White" VerticalAlignment="Center"/>
        <Button x:Name="PlusBtn_Content" Content="+" Width="25" Margin="0,0,1,0" DockPanel.Dock="Right" IsTabStop="False"/>
        <Button x:Name="MinusBtn_Content" Content="-" Width="25" Margin="10,0,1,0" DockPanel.Dock="Right" IsTabStop="False"/>
        <TextBox x:Name="ContentBox" TextWrapping="Wrap" Margin="10,0,20,0" DockPanel.Dock="Left" GotFocus="ContentBox_GotFocus"/>
    </DockPanel>
    
</UserControl>
